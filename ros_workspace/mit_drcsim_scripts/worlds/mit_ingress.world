    <!--<include><uri>model://atlas_sandia_hands</uri><pose>-0.8795 -0.2973 0.93 0 0 -1.5708</pose></include>-->
    <!--<include><uri>model://mit_robot</uri><pose>-2 1 0.93 0 0 -1.5708</pose></include>-->
